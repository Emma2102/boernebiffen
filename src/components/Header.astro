<header class="w-full py-4">
  <div class="max-w-9xl mx-auto flex items-center justify-between px-2">

    <!-- Venstre: dit logo -->
    <img 
      src="/Logo.png" 
      alt="Børnebiffen logo"
      class="h-16 w-auto object-contain"
    />

    <!-- Højre: Search + Hej Sif -->
    <div class="flex items-center space-x-4">

      <!-- Search knap -->
      <button
        class="w-10 h-10 rounded-full bg-[var(--color-prim-100)] 
               flex items-center justify-center shadow-md 
               hover:scale-105 duration-200"
      >
        <img src="/søg.png" alt="Search" class="w-6 h-6" />
      </button>

      <!-- Hej Sif knap -->
      <button
        class="px-6 py-2 rounded-full bg-[var(--color-prim-100)] 
               text-white font-raleway font-semibold shadow-md 
               hover:scale-105 duration-200"
      >
        Hej Sif!
      </button>

    </div>
  </div>
</header>
