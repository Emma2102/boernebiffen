---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
import Card3 from '../components/Card3.astro';
---
<MainLayout title="Titel">
	<article>
		<h1>Index overskrift</h1>
		<Button>Klik!</Button>
		<p>Link til <Link href="https://www.kea.dk" target="_blank">En anden side</Link></p>
		<Image src={thumbsup} alt=""></Image>
	</article>

<article>

<Card3 
  image="public/kanin.png"
  title="DEN SIDSTE EFTERÅRSDAG"
  description="En kort, ordløs fortælling om at hjælpes ad og konkurrere mod hinanden. Det er den sidste efterårsdag, og inden vinteren for alvor..."
  time="7 min"
  color="var(--color-gul-50)"
/>
	</article>

</MainLayout>